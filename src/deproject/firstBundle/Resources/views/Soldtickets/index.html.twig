{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Soldtickets list</h1>

    <table border='1' cellpadding='10'>
        <thead>
            <tr>
                <th>Ticket</th>
                <th>Category</th>
                <th>Grant type</th>
                <th>Partner</th>
                <th>quantity</th>
                <th>Total</th>
                <th>date</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
        		<td>{{ entity.Ticket.tName }}</td>
                <td>{{ entity.category.cName }}</td>
                <td>{{ entity.grantType.grantName}}</td>
                <td>{{ entity.partner.pName}}</td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.total }}</td>
                <td>{{ entity.date }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('soldtickets_edit', { 'id': entity.Ticket.tId }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('soldtickets_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
