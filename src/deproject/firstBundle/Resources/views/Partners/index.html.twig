{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Partners</h1>

    <table border='1' cellpadding='10'>
        <thead>
            <tr>
                <th>Pid</th>
                <th>Pname</th>
                <th>Strasse</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Fname</th>
                <th>Lname</th>
                <th>Title</th>
                <th>Iban</th>
                <th>Phone</th>
                <th>Mail</th>
            
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('partners_show', { 'id': entity.pid }) }}">{{ entity.pid }}</a></td>
                <td>{{ entity.pName }}</td>
                <td>{{ entity.strasse }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.zipcode }}</td>
                <td>{{ entity.fName }}</td>
                <td>{{ entity.lName }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.iban }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.mail }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('partners_show', { 'id': entity.pid }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('partners_edit', { 'id': entity.pid }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('partners_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
