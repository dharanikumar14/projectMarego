{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Partners</h1>

    <table border='1' cellpadding='10'>
        <thead>
            <tr>
                <th>Pid</th>
                <th>Partner's Name</th>
                <th>Strasse</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Title</th>
                <th>Iban</th>
                <th>Phone</th>
                <th>E-Mail</th>
            
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <div id="container">
			<div id="header">
			<div>{% image '@deprojectfirstBundle/Resources/public/images/deutsche-bahn.jpg'  output="images/deutsche-bahn.jpg" %}
    <img src="{{ asset_url }}" alt="DBbahn" align="left" width="100" />
   {% endimage %}</div>
			<div>{% image '@deprojectfirstBundle/Resources/public/images/marego.jpg'  output="images/marego.jpg" %}
    <img src="{{ asset_url }}" alt="marego" align="right" width="200" height="100" /></div>
			  {% endimage %}</div></div>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('partners_show', { 'id': entity.pid }) }}">{{ entity.pid }}</a></td>
                <td>{{ entity.pName }}</td>
                <td>{{ entity.strasse }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.zipcode }}</td>
                <td>{{ entity.fName }}</td>
                <td>{{ entity.lName }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.iban }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.mail }}</td>
                <td>
                <ul>
                   
                    <li>
                        <a href="{{ path('partners_edit', { 'id': entity.pid }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        
        <div id="footer">
			<div>{% image '@deprojectfirstBundle/Resources/public/images/Capture.jpg'  output="images/Capture.jpg" %}
    <img src="{{ asset_url }}" alt="Capture" align="bottom" width="1350" height="130" />
   {% endimage %}</div>
			</div>
			</tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('partners_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
