{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Price Category list</h1>

    <table border='1' cellpadding='10'>
        <thead>
            <tr>
                <th>Cid</th>
                <th>Cname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pricecategory_show', { 'id': entity.cId }) }}">{{ entity.cId }}</a></td>
                <td>{{ entity.cName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pricecategory_edit', { 'id': entity.cId }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pricecategory_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
