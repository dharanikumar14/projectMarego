{% extends '::base.html.twig' %}

{% block body -%}
    <h1>GrantType list</h1>

    <table border='1' cellpadding='10'>
        <thead>
            <tr>
                <th>Gid</th>
                <th>Grantname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('granttype_show', { 'id': entity.gId }) }}">{{ entity.gId }}</a></td>
                <td>{{ entity.grantName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('granttype_edit', { 'id': entity.gId }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('granttype_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
